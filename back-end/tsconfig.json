{
	"compilerOptions": {

		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"sourceMap": true,
		"outDir": "dist/",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}